{
  "openapi": "3.0.0",
  "info": {
    "title": "NFP107 Personne API",
    "version": "1.0.0",
    "description": "Simple API to manage users."
  },
  "servers": [
    { "url": "http://localhost:3000" }
  ],
  "paths": {
    "/Personne": {
      "get": {
        "summary": "Lister les personnes",
        "tags": ["Personne"],
        "responses": {
          "200": {
            "description": "Liste des personnes",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": { "$ref": "#/components/schemas/Utilisateur" }
                }
              }
            }
          }
        }
      },
      "post": {
        "summary": "Créer une personne",
        "tags": ["Personne"],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/CreateUtilisateurInput"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Personne créée",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/Utilisateur" }
              }
            }
          },
          "400": { "description": "Bad request" },
          "409": { "description": "Conflit (email déjà existant)" }
        }
      }
    },
    "/Personne/{identifiant}": {
      "delete": {
        "summary": "Supprimer une personne par identifiant",
        "tags": ["Personne"],
        "parameters": [
          {
            "in": "path",
            "name": "identifiant",
            "required": true,
            "schema": { "type": "string" },
            "description": "Identifiant de la personne (clé primaire)"
          }
        ],
        "responses": {
          "204": { "description": "Personne supprimée" },
          "400": { "description": "Identifiant invalide" },
          "404": { "description": "Personne introuvable" }
        }
      }
    },
    "/enseignants": {
      "get": {
        "summary": "Liste des enseignants",
        "tags": ["Enseignants"],
        "responses": {
          "200": {
            "description": "Une liste d'enseignants",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": { "$ref": "#/components/schemas/Enseignant" }
                }
              }
            }
          }
        }
      },
      "post": {
        "summary": "Créer un enseignant",
        "tags": ["Enseignants"],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/CreateEnseignantInput"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Enseignant créé",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/Enseignant" }
              }
            }
          },
          "400": { "description": "Bad request" },
          "409": { "description": "Conflict (email already exists)" }
        }
      }
    },
    "/Note": {
      "get": {
        "summary": "Lister les notes",
        "tags": ["Note"],
        "responses": {
          "200": {
            "description": "Liste des notes",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": { "$ref": "#/components/schemas/Note" }
                }
              }
            }
          }
        }
      },
      "post": {
        "summary": "Créer une note",
        "tags": ["Note"],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/CreateNoteInput"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Note créée",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/Note" }
              }
            }
          },
          "400": { "description": "Bad request" },
          "409": { "description": "Conflit (note déjà existante)" }
        }
      },
      "put": {
        "summary": "Modifier une note",
        "tags": ["Note"],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/UpdateNoteInput"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Note modifiée",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/Note" }
              }
            }
          },
          "400": { "description": "Bad request" },
          "409": { "description": "Conflit" }
        }
      }
    },
    "/Note/{Id_Note}": {
      "delete": {
        "summary": "Supprimer une note par Id_Note",
        "tags": ["Note"],
        "parameters": [
          {
            "in": "path",
            "name": "Id_Note",
            "required": true,
            "schema": { "type": "string" },
            "description": "Id_Note de la note (clé primaire)"
          }
        ],
        "responses": {
          "204": { "description": "Note supprimée" },
          "400": { "description": "Id_Note invalide" },
          "404": { "description": "Note introuvable" }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Utilisateur": {
        "type": "object",
        "properties": {
          "identifiant": { "type": "string" },
          "nom": { "type": "string" },
          "prenom": { "type": "string" },
          "email": { "type": "string", "format": "email" },
          "adresse": { "type": "string" },
          "telephone": { "type": "string" },
          "password": { "type": "string" }
        }
      },
      "CreateUtilisateurInput": {
        "type": "object",
        "required": ["identifiant", "nom", "prenom", "email", "adresse", "telephone", "password"],
        "properties": {
          "identifiant": { "type": "string" },
          "nom": { "type": "string" },
          "prenom": { "type": "string" },
          "email": { "type": "string", "format": "email" },
          "adresse": { "type": "string" },
          "telephone": { "type": "string" },
          "password": { "type": "string" }
        }
      },
      "Enseignant": {
        "type": "object",
        "properties": {
          "identifiant": { "type": "string" },
          "nom": { "type": "string" },
          "prenom": { "type": "string" },
          "email": { "type": "string", "format": "email" },
          "adresse": { "type": "string" },
          "telephone": { "type": "string", "format": "phone_number" },
          "mdp": { "type": "string", "format": "password" },
          "created_at": { "type": "string", "format": "date-time" }
        }
      },
      "CreateEnseignantInput": {
        "type": "object",
        "required": ["nom", "prenom", "email", "adresse", "telephone", "mdp"],
        "properties": {
          "nom": { "type": "string" },
          "prenom": { "type": "string" },
          "email": { "type": "string", "format": "email" },
          "adresse": { "type": "string" },
          "telephone": { "type": "string", "format": "phone_number" },
          "mdp": { "type": "string", "format": "password" }
        }
      },"Note": {
        "type": "object",
        "properties": {
          "Id_Note": { "type": "string" },
          "note": { "type": "float" },
          "identifiant": {
            "$ref": "#/components/schemas/Etudiant" 
          },
          "code": {
            "$ref": "#/components/schemas/UE" 
          }
        }
      },
      "CreateNoteInput": {
        "type": "object",
        "required": ["note"],
        "properties": {
          "note": { "type": "float" },
          "identifiant": {
            "$ref": "#/components/schemas/Etudiant" 
          },
          "code": {
            "$ref": "#/components/schemas/UE" 
          }
        }
      },
      "UpdateNoteInput": {
        "type": "object",
        "required": ["Id_Note", "note"],
        "properties": {
          "Id_Note": { "type": "string" },
          "note": { "type": "float" },
          "identifiant": {
            "$ref": "#/components/schemas/Etudiant" 
          },
          "code": {
            "$ref": "#/components/schemas/UE" 
          }
        }
      }
    }
  }
}


