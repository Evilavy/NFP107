      "put": {
        "summary": "Modifier une filière",
        "tags": ["Filiere"],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/UpdateFiliereInput"
              }
            }
