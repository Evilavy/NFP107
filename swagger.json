{
  "openapi": "3.0.0",
  "info": {
    "title": "NFP107 Personne API",
    "version": "1.0.0",
    "description": "Simple API to manage users."
  },
  "servers": [
    { "url": "http://localhost:3000" }
  ],
  "paths": {
    "/Personne": {
      "get": {
        "summary": "Lister les personnes",
        "tags": ["Personne"],
        "responses": {
          "200": {
            "description": "Liste des personnes",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": { "$ref": "#/components/schemas/Utilisateur" }
                }
              }
            }
          }
        }
      },
      "post": {
        "summary": "Créer une personne",
        "tags": ["Personne"],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/CreateUtilisateurInput"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Personne créée",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/Utilisateur" }
              }
            }
          },
          "400": { "description": "Bad request" },
          "409": { "description": "Conflit (email déjà existant)" }
        }
      }
    },
    "/Personne/{identifiant}": {
      "delete": {
        "summary": "Supprimer une personne par identifiant",
        "tags": ["Personne"],
        "parameters": [
          {
            "in": "path",
            "name": "identifiant",
            "required": true,
            "schema": { "type": "string" },
            "description": "Identifiant de la personne (clé primaire)"
          }
        ],
        "responses": {
          "204": { "description": "Personne supprimée" },
          "400": { "description": "Identifiant invalide" },
          "404": { "description": "Personne introuvable" }
        }
      }
    },
    "/enseignants": {
      "get": {
        "summary": "Liste des enseignants",
        "tags": ["Enseignants"],
        "responses": {
          "200": {
            "description": "Une liste d'enseignants",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": { "$ref": "#/components/schemas/Enseignant" }
                }
              }
            }
          }
        }
      },
      "post": {
        "summary": "Créer un enseignant",
        "tags": ["Enseignants"],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/CreateEnseignantInput"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Enseignant créé",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/Enseignant" }
              }
            }
          },
          "400": { "description": "Bad request" },
          "409": { "description": "Conflict (email already exists)" }
        }
      }
    },
    "/Filiere": {
      "get": {
        "summary": "Lister les filières",
        "tags": ["Filiere"],
        "responses": {
          "200": {
            "description": "Liste des filières",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": { "$ref": "#/components/schemas/Filiere" }
                }
              }
            }
          }
        }
      },
      "post": {
        "summary": "Créer une filière",
        "tags": ["Filiere"],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/CreateFiliereInput"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Filière créée",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/Filiere" }
              }
            }
          },
          "400": { "description": "Bad request" },
          "409": { "description": "Conflit (filière déjà existante)" }
        }
      },
      "put": {
        "summary": "Modifier une filière",
        "tags": ["Filiere"],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/UpdateFiliereInput"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Filière modifiée",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/Filiere" }
              }
            }
          },
          "400": { "description": "Bad request" },
          "409": { "description": "Conflit" }
        }
      }
    },
    "/Filiere/{Id_filiere}": {
      "delete": {
        "summary": "Supprimer une filière par Id_filiere",
        "tags": ["Filiere"],
        "parameters": [
          {
            "in": "path",
            "name": "Id_filiere",
            "required": true,
            "schema": { "type": "string" },
            "description": "Id_filiere de la filière (clé primaire)"
          }
        ],
        "responses": {
          "204": { "description": "Filiere supprimée" },
          "400": { "description": "Id_filiere invalide" },
          "404": { "description": "Filiere introuvable" }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Utilisateur": {
        "type": "object",
        "properties": {
          "identifiant": { "type": "string" },
          "nom": { "type": "string" },
          "prenom": { "type": "string" },
          "email": { "type": "string", "format": "email" },
          "adresse": { "type": "string" },
          "telephone": { "type": "string" },
          "password": { "type": "string" }
        }
      },
      "CreateUtilisateurInput": {
        "type": "object",
        "required": ["identifiant", "nom", "prenom", "email", "adresse", "telephone", "password"],
        "properties": {
          "identifiant": { "type": "string" },
          "nom": { "type": "string" },
          "prenom": { "type": "string" },
          "email": { "type": "string", "format": "email" },
          "adresse": { "type": "string" },
          "telephone": { "type": "string" },
          "password": { "type": "string" }
        }
      },
      "Enseignant": {
        "type": "object",
        "properties": {
          "identifiant": { "type": "string" },
          "nom": { "type": "string" },
          "prenom": { "type": "string" },
          "email": { "type": "string", "format": "email" },
          "adresse": { "type": "string" },
          "telephone": { "type": "string", "format": "phone_number" },
          "mdp": { "type": "string", "format": "password" },
          "created_at": { "type": "string", "format": "date-time" }
        }
      },
      "CreateEnseignantInput": {
        "type": "object",
        "required": ["nom", "prenom", "email", "adresse", "telephone", "mdp"],
        "properties": {
          "nom": { "type": "string" },
          "prenom": { "type": "string" },
          "email": { "type": "string", "format": "email" },
          "adresse": { "type": "string" },
          "telephone": { "type": "string", "format": "phone_number" },
          "mdp": { "type": "string", "format": "password" }
        }
      },
      "Filiere": {
        "type": "object",
        "properties": {
          "Id_filiere": { "type": "string" },
          "nom_filiere": { "type": "string" }
        }
      },
      "CreateFiliereInput": {
        "type": "object",
        "required": ["nom_filiere"],
        "properties": {
          "nom_filiere": { "type": "string" }
        }
      },
      "UpdateFiliereInput": {
        "type": "object",
        "required": ["Id_filiere", "nom_filiere"],
        "properties": {
          "Id_filiere": { "type": "string" },
          "nom_filiere": { "type": "string" }
        }
      }
    }
  }
}


