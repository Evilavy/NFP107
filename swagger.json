{
  "openapi": "3.0.0",
  "info": {
    "title": "NFP107 Personne API",
    "version": "1.0.0",
    "description": "Simple API to manage users."
  },
  "servers": [
    { "url": "http://localhost:3000" }
  ],
  "paths": {
    "/Personne/login": {
      "post": {
        "summary": "Connexion utilisateur",
        "tags": ["Personne"],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["identifiant", "password"],
                "properties": {
                  "identifiant": { "type": "string" },
                  "password": { "type": "string", "format": "password" }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Authentification réussie",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "token": { "type": "string" },
                    "user": { "$ref": "#/components/schemas/UtilisateurSansPassword" }
                  }
                }
              }
            }
          },
          "401": { "description": "Identifiants invalides" }
        }
      }
    },
    "/Personne": {
      "get": {
        "summary": "Lister les personnes",
        "tags": ["Personne"],
        "security": [{ "bearerAuth": [] }],
        "responses": {
          "200": {
            "description": "Liste des personnes",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": { "$ref": "#/components/schemas/Utilisateur" }
                }
              }
            }
          }
        }
      },
      "post": {
        "summary": "Créer une personne",
        "tags": ["Personne"],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/CreateUtilisateurInput"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Personne créée",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/Utilisateur" }
              }
            }
          },
          "400": { "description": "Bad request" },
          "409": { "description": "Conflit (email déjà existant)" }
        }
      }
    },
    "/Personne/me": {
      "get": {
        "summary": "Profil utilisateur courant",
        "tags": ["Personne"],
        "security": [{ "bearerAuth": [] }],
        "responses": {
          "200": {
            "description": "Utilisateur courant",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/UtilisateurSansPassword" }
              }
            }
          },
          "401": { "description": "Non authentifié" }
        }
      }
    },
    "/Personne/{identifiant}": {
      "delete": {
        "summary": "Supprimer une personne par identifiant",
        "tags": ["Personne"],
        "parameters": [
          {
            "in": "path",
            "name": "identifiant",
            "required": true,
            "schema": { "type": "string" },
            "description": "Identifiant de la personne (clé primaire)"
          }
        ],
        "responses": {
          "204": { "description": "Personne supprimée" },
          "400": { "description": "Identifiant invalide" },
          "404": { "description": "Personne introuvable" }
        }
      }
    },
    "/enseignants": {
      "get": {
        "summary": "Liste des enseignants",
        "tags": ["Enseignants"],
        "responses": {
          "200": {
            "description": "Une liste d'enseignants",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": { "$ref": "#/components/schemas/Enseignant" }
                }
              }
            }
          }
        }
      },
      "post": {
        "summary": "Créer un enseignant",
        "tags": ["Enseignants"],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/CreateEnseignantInput"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Enseignant créé",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/Enseignant" }
              }
            }
          },
          "400": { "description": "Bad request" },
          "409": { "description": "Conflict (email already exists)" }
        }
      }
    },
    "/CorrespondanceFiliereUE": {
      "get": {
        "summary": "Lister les correspondances Filière-UE",
        "tags": ["CorrespondanceFiliereUE"],
        "security": [{ "bearerAuth": [] }],
        "responses": {
          "200": {
            "description": "Liste des correspondances Filière-UE",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": { "$ref": "#/components/schemas/CorrespondanceFiliereUE" }
                }
              }
            }
          }
        }
      },
      "post": {
        "summary": "Créer une correspondance Filière-UE",
        "tags": ["CorrespondanceFiliereUE"],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/FormCorrespondanceFiliereUEInput"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Correspondance Filière-UE créée",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/CorrespondanceFiliereUE" }
              }
            }
          },
          "400": { "description": "Bad request" },
          "409": { "description": "Conflit (correspondance déjà existante)" }
        }
      },
      "put": {
        "summary": "Modifier une correspondance Filière-UE",
        "tags": ["CorrespondanceFiliereUE"],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/FormCorrespondanceFiliereUEInput"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Correspondance Filière-UE modifiée",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/CorrespondanceFiliereUE" }
              }
            }
          },
          "400": { "description": "Bad request" },
          "409": { "description": "Conflit (correspondance déjà existante)" }
        }
      }
    },
    "/CorrespondanceFiliereUE/{Id_Filiere, code}": {
      "delete": {
        "summary": "Supprimer une correspondance à partir des 2 id (Id_Filiere et code)",
        "tags": ["CorrespondanceFiliereUE"],
        "parameters": [
          {
            "in": "path",
            "name": "Id_Filiere",
            "required": true,
            "schema": { "type": "string" },
            "description": "Filiere"
          },
          {
            "in": "path",
            "name": "code",
            "required": true,
            "schema": { "type": "string" },
            "description": "UE"
          }
        ],
        "responses": {
          "204": { "description": "Correspondance supprimée" },
          "400": { "description": "Association invalide" },
          "404": { "description": "Correspondance introuvable" }
        }
      }
    }
  },
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    },
    "schemas": {
      "UtilisateurSansPassword": {
        "type": "object",
        "properties": {
          "identifiant": { "type": "string" },
          "nom": { "type": "string" },
          "prenom": { "type": "string" },
          "email": { "type": "string", "format": "email" },
          "adresse": { "type": "string" },
          "telephone": { "type": "string" }
        }
      },
      "Utilisateur": {
        "type": "object",
        "properties": {
          "identifiant": { "type": "string" },
          "nom": { "type": "string" },
          "prenom": { "type": "string" },
          "email": { "type": "string", "format": "email" },
          "adresse": { "type": "string" },
          "telephone": { "type": "string" },
          "password": { "type": "string" }
        }
      },
      "CreateUtilisateurInput": {
        "type": "object",
        "required": ["identifiant", "nom", "prenom", "email", "adresse", "telephone", "password"],
        "properties": {
          "identifiant": { "type": "string" },
          "nom": { "type": "string" },
          "prenom": { "type": "string" },
          "email": { "type": "string", "format": "email" },
          "adresse": { "type": "string" },
          "telephone": { "type": "string" },
          "password": { "type": "string" }
        }
      },
      "Enseignant": {
        "type": "object",
        "properties": {
          "identifiant": { "type": "string" },
          "nom": { "type": "string" },
          "prenom": { "type": "string" },
          "email": { "type": "string", "format": "email" },
          "adresse": { "type": "string" },
          "telephone": { "type": "string", "format": "phone_number" },
          "mdp": { "type": "string", "format": "password" },
          "created_at": { "type": "string", "format": "date-time" }
        }
      },
      "CreateEnseignantInput": {
        "type": "object",
        "required": ["nom", "prenom", "email", "adresse", "telephone", "mdp"],
        "properties": {
          "nom": { "type": "string" },
          "prenom": { "type": "string" },
          "email": { "type": "string", "format": "email" },
          "adresse": { "type": "string" },
          "telephone": { "type": "string", "format": "phone_number" },
          "mdp": { "type": "string", "format": "password" }
        }
      },
      "CorrespondanceFiliereUE": {
        "type": "object",
        "properties": {
          "Id_Filiere": {
            "$ref": "#/components/schemas/Filiere" 
          },
          "code": {
            "$ref": "#/components/schemas/UE" 
          }
        }
      },
      "FormCorrespondanceFiliereUEInput": {
        "type": "object",
        "required": ["Id_Filiere", "code"],
        "properties": {
          "Id_Filiere": { 
            "$ref": "#/components/schemas/Filiere" 
          },
          "code": {
            "$ref": "#/components/schemas/UE" 
          }
        }
      }
    }
  }
}


