    "/Note/{Id_Note}": {
      "delete": {
        "summary": "Supprimer une note par Id_Note",
        "tags": ["Note"],
        "parameters": [
          {
            "in": "path",
            "name": "Id_Note",
            "required": true,
            "schema": { "type": "string" },
            "description": "Id_Note de la note (clé primaire)"
          }
        ],
